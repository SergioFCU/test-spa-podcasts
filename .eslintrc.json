{
  "extends": "next/core-web-vitals",
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["*.test.tsx"],
      "rules": {
        "prettier/prettier": "on"
      }
    }
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "error",
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "htmlWhitespaceSensitivity": "css",
        "insertPragma": false,
        "jsxBracketSameLine": false,
        "jsxSingleQuote": false,
        "printWidth": 80,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    ]
  }
}
